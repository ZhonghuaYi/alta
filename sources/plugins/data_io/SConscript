Import('env', 'CheckPKG')
env = env.Clone()

# Special linking flags, defined in the OS dependant configuration file
env.AppendUnique(LIBS = env['PLUGIN_LIB'])

env.AppendUnique(LIBPATH = env['OPENEXR_DIR'])
env.AppendUnique(CPPPATH = env['OPENEXR_INC'])

build_EXR = False
conf = Configure(env, custom_tests = { 'CheckPKG' : CheckPKG })

# Check we have the necessary dependency, but gracefully handle
# situations where 'pkg-config' is missing.
if conf.CheckPKG('OpenEXR'):
        env.ParseConfig('pkg-config --cflags --libs OpenEXR')
if conf.CheckLibWithHeader('IlmImf', 'ImfRgbaFile.h', 'c++'):
        build_EXR = True

env = conf.Finish()

if build_EXR:
	env.SharedLibrary('../../build/data_utia', ['utia.cpp'])
        env.SharedLibrary('../../build/data_merl', ['merl.cpp'])
#env.SharedLibrary('../../build/data_astm', ['astm.cpp'])
