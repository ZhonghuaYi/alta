Import('env')
env = env.Clone()

env.AppendUnique(CPPPATH = env['EIGEN_INC'])

build_lib = False

conf = Configure(env)

if conf.CheckCXXHeader('unsupported/Eigen/LevenbergMarquardt'):
	build_lib = True
else:
  print "<<WARNING>> Unsupported Eigen LevenbergMarquardt was not found"

env = conf.Finish()

if build_lib:
  env.AppendUnique(LIBS = env['PLUGIN_LIB'])
  sources = ['fitter.cpp']
  env.SharedLibrary('../../build/nonlinear_fitter_eigen', sources)
